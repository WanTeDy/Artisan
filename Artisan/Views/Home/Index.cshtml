        <div class="auto3">
            <a href="/Automatics/Swing"><p>Автоматика для распашных ворот</p></a>
            <img src="~/Content/image/img6.png">
        </div>
    </div>
</div>
<div class="container">
    <div class="h2" id="about_us">
        <h2>О нас</h2>
    </div>
</div>
<div class="container">
    <div class="about_us">
        <h3>
            <strong>«Артисан»</strong> занимается автоматическими воротами, распашными воротами, секционными, шлагбаумами и т.д.
        </h3>
        <div class="content_about">
            @{ string desc = ""; }
            @foreach (var cat in Model)
            {
                if (cat.Description.Length > 1000)
                {
                    desc = cat.Description.Substring(1000).TrimEnd() + "...";
                }
                else
                {
                    desc = cat.Description;
                }
                @ViewBag.cloud.Api.UrlImgUp.Transform(new CloudinaryDotNet.Transformation().Width(400).Height(300).Crop("scale")).BuildImageTag(cat.Image.PublicId)
                <p>
                    <span>@cat.Name.</span> @desc <a href="/Categories/Products/@cat.Id">Подробнее</a>
                </p>
            }
        </div>
    </div>
</div>
