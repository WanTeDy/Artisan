@model IEnumerable<Artisan.Models.Product>
@{
    Layout = "AdminLayout.cshtml";

}

<div class="shell">


    <!-- Main -->
    <div id="main">
        <div class="cl">&nbsp;</div>

        <!-- Content -->
        <div id="content">

            <!-- Box -->
            <div class="box">
                <!-- Box Head -->
                <div class="box-head">
                    <h2 class="left">Список продуктов</h2>
                    <div class="right">
                        <a href="/Webmaster/AddProduct" class="ico">Добавить продукт</a>
                        <!--<label>search articles</label>
                        <input type="text" class="field small-field" />
                        <input type="submit" class="button" value="search" />-->
                    </div>
                </div>
                <!-- End Box Head -->
                <!-- Table -->
                @if (Model.Count() > 0)
                {
                    <div class="table">
                        <table width="100%" border="0" cellspacing="0" cellpadding="0">
                            <tr>
                                <th width="100" class="ac">Изображение</th>
                                <th>Описание изображения</th>
                                <th>Название</th>
                                <th>Категория</th>
                                <th>Цена</th>
                                <th width="110" class="ac">Управление</th>
                            </tr>
                            @foreach (var product in Model)
                            {
                                <tr>
                                    <td>@ViewBag.cloud.Api.UrlImgUp.Transform(new CloudinaryDotNet.Transformation().Width(100).Height(100).Crop("scale")).BuildImageTag(product.Image.PublicId)</td>
                                    <td><h3>@product.Image.Description</h3></td> 
                                    <td><h3><a href="/Webmaster/Products/@product.Id">@product.Name</a></h3></td>
                                    <td><h3><a href="/Webmaster/Categories/@product.CategoryId">@product.Category.Name</a></h3></td>
                                    <td><h3>@product.Price</h3></td>
                                    <td><a href="/Webmaster/DeleteProduct/@product.Id" class="ico del" onclick="return confirm('Удаляем продукт?')">Удалить</a><a href="/Webmaster/EditProduct/@product.Id" class="ico edit">Редактировать</a></td>
                                </tr>
                            }
                        </table>
                    </div>
                <!-- Table -->
                }
                else
                {
                    <div class="alert-warning">
                        Список продуктов пуст
                    </div>
                }
            </div>
            <!-- End Box -->
            <!-- Box -->
            <div class="box">

            </div>
            <!-- End Box -->

        </div>
        <!-- End Content -->


        <div class="cl">&nbsp;</div>
    </div>
    <!-- Main -->
</div>